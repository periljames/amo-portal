# =========================
# Core environment
# =========================
APP_ENV=production
TZ=UTC

# Public URL used by EDGE virtual host and frontend API base
PORTAL_DOMAIN=portal.UNKNOWN__FILL_ME

# =========================
# Backend runtime
# =========================
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8080

# JWT/app secret (must come from secret store)
SECRET_KEY=PLACEHOLDER__SET_IN_SECRET_STORE
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# CORS (comma-separated origins)
CORS_ALLOWED_ORIGINS=https://portal.UNKNOWN__FILL_ME
CORS_ALLOWED_ORIGIN_REGEX=
CORS_ALLOW_CREDENTIALS=true

# Request/body tuning
MAX_REQUEST_BODY_BYTES=UNKNOWN__FILL_ME
GZIP_MINIMUM_SIZE=1024
GZIP_COMPRESSLEVEL=6
PLATFORM_SETTINGS_CACHE_TTL_SEC=30

# Schema safety
SCHEMA_STRICT=true

# =========================
# Database connectivity
# =========================
# Runtime app user URL
DATABASE_WRITE_URL=postgresql+psycopg2://amodb_app:PLACEHOLDER__SET_IN_SECRET_STORE@DB_HOST_UNKNOWN__FILL_ME:5432/amodb
DATABASE_READ_URL=

# Migration/admin URL (optional separate role)
DATABASE_MIGRATION_URL=postgresql+psycopg2://amodb_migrator:PLACEHOLDER__SET_IN_SECRET_STORE@DB_HOST_UNKNOWN__FILL_ME:5432/amodb

DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE_SEC=1800

# =========================
# Realtime broker
# =========================
REALTIME_ENABLED=true
MQTT_BROKER_WS_URL=wss://broker.UNKNOWN__FILL_ME/mqtt
MQTT_BROKER_INTERNAL_URL=tcp://broker.internal.UNKNOWN__FILL_ME:1883
MQTT_AUTH_MODE=jwt
REALTIME_CONNECT_TOKEN_TTL_SECONDS=300
REALTIME_PAYLOAD_MAX_BYTES=8192

# =========================
# Upload paths + limits
# =========================
AMO_ASSET_UPLOAD_DIR=/srv/amo/uploads/amo_assets
TRAINING_UPLOAD_DIR=/srv/amo/uploads/training
AIRCRAFT_DOC_UPLOAD_DIR=/srv/amo/uploads/aircraft_documents
EHM_LOG_UPLOAD_DIR=/srv/amo/uploads/ehm

AMO_ASSET_MAX_UPLOAD_BYTES=UNKNOWN__FILL_ME
TRAINING_MAX_UPLOAD_BYTES=UNKNOWN__FILL_ME
EHM_LOG_MAX_UPLOAD_BYTES=UNKNOWN__FILL_ME

# =========================
# Frontend build/runtime
# =========================
VITE_API_BASE_URL=https://portal.UNKNOWN__FILL_ME
VITE_PORTAL_URL=https://portal.UNKNOWN__FILL_ME
VITE_MANUALS_PWA_ENABLED=0

# =========================
# Optional integrations (set only if used)
# =========================
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASS=PLACEHOLDER__SET_IN_SECRET_STORE
SMTP_FROM=

WHATSAPP_WEBHOOK_URL=
WHATSAPP_WEBHOOK_BEARER=PLACEHOLDER__SET_IN_SECRET_STORE

# =========================
# TLS / ACME metadata (optional admin status fields)
# =========================
ACME_DIRECTORY_URL=
ACME_CLIENT=
ACME_CERT_STATUS=
ACME_CERT_ISSUER=
ACME_CERT_EXPIRES_AT=
ACME_CERT_RENEWED_AT=

# =========================
# Backup policy placeholders
# =========================
BACKUP_RETENTION_DAYS=UNKNOWN__FILL_ME
BACKUP_TARGET_PATH=/mnt/nas/UNKNOWN__FILL_ME/backups
